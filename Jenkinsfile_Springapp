pipeline{
    agent { 
        label 'kubernetes'
  }
    stages{
        stage('Provision springapp-issuer to acquire a certificate to secure the javaspringmongo.devopsnetwork.net'){
            steps{
                sh "echo cloning code"
                sh "kubectl apply -f springapp-issuer.yml"
            }
        }
        stage('Deploy javaspringmongo.devopsnetwork.net'){
            steps{
              withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'aws_cred', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
              sh "echo 'Create javaspringmongo.devopsnetwork.net'"
              sh "terraform init"
              sh "terraform validate"
              sh "terraform plan"
              sh "terraform apply --auto-approve"
              }
            }
        }
    }
}
